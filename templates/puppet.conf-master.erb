[master]
modulepath                = <%= @modulepath %>
manifest                  = <%= @manifest %>
templatedir               = <%= @templatedir %>
hiera_config              = <%= @hiera_config %>
autosign                  = <%= @autosign %>
ssl_client_header         = SSL_CLIENT_S_DN
ssl_client_verify_header  = SSL_CLIENT_VERIFY
report                    = <%= @reporting %>
<%- if @reporting -%>
reports                   = store, http
<%- if @dashboard_port != 'UNSET' -%>
reporturl                 = http://<%= @puppet_site %>:<%= @dashboard_port %>/reports
<%- else -%>
reporturl                 = http://<%= @puppet_site %>/reports
<%- end -%>
<%- end -%>

